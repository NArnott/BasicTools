@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Reflection

@functions {
    private static readonly string VERSION = ((AssemblyInformationalVersionAttribute)Attribute.GetCustomAttribute(typeof(BasicTools.Server.Program).Assembly, typeof(AssemblyInformationalVersionAttribute), false)).InformationalVersion;

    private static string VersionedHRef(string input)
    {
        return $"{input}?ver={VERSION}";
    }
}

