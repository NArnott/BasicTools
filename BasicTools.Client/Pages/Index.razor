@page "/"
@inject RouteSourceAssemblyProvider RouteSources
@attribute [PageMetadata(
Description = "A basic set of free, online tools to help out developers",
Keywords = "online tool, free, dev tools"
)]

<h1>Basic Dev Toolbox</h1>

<p>Your one-stop shop for basic, online developer tools!</p>

<div class="row">
    @foreach (var tool in RouteSources.ToolPages)
    {
        <div class="col-xl-3 col-lg-4 col-md-6 mb-2 d-flex align-items-stretch">
            <div class="card">
                <div class="card-header">
                    <Icon IconSize="IconSize.x2" Class="mr-2" Name="@tool.Value.FaIcon" />
                    <span class="h4">@tool.Value.Name</span>
                </div>
                <div class="card-body">
                    <p class="card-text">@tool.Value.Description</p>
                </div>
                <div class="card-footer text-right">
                    <NavLink href="@tool.Key" class="btn btn-primary">Use Tool</NavLink>
                </div>
            </div>
        </div>
    }
</div>

<p class="mt-4">This site is an <a href="https://github.com/NArnott/BasicTools" target="gitRepo">open source project</a> hosted on GitHub. Contributions are welcome!</p>