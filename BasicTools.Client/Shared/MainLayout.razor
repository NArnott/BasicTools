@inherits LayoutComponentBase

<MudThemeProvider Theme="DefaultTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="NavDrawerToggle" />
        <MudText Typo="Typo.h5" Class="ml-3 pa-0">Basic Dev Tools</MudText>
        <MudSpacer />
        @if (_pageInfoContents != null)
        {
            <MudToggleIconButton Icon="@Icons.Material.Filled.Assistant" ToggledIcon="@Icons.Material.Outlined.Assistant" Color="Color.Inherit" Edge="Edge.End" @bind-Toggled="@PageInfoDrawerOpen" Title="Toggle Page Info" />
        }
    </MudAppBar>
    <MudDrawer @bind-Open="@_navDrawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
        <MudSpacer />
        <MudText Class="ma-3">This site is an <MudLink Href="https://github.com/NArnott/BasicTools" Target="gitRepo">open source project</MudLink> hosted on GitHub. Contributions are welcome!</MudText>
    </MudDrawer>
    <MudDrawer @bind-Open="PageInfoDrawerOpen" Anchor="Anchor.Right" ClipMode="DrawerClipMode.Always" Elevation="2" Class="pa-3" Width="350px">
        @_pageInfoContents
    </MudDrawer>
    <MudMainContent Style="position: relative">
        <MudContainer MaxWidth="MaxWidth.False">
            <CascadingValue Value="this">
                @Body
            </CascadingValue>
        </MudContainer>
        <MudIconButton Icon="@Icons.Filled.OpenInFull" Class="d-none d-md-flex" Style="position: absolute; right: 5px; top: 70px;" OnClick="FullExpand" Title="Full Screen" />
    </MudMainContent>
</MudLayout>